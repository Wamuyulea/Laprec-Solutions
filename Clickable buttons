  <script>
    // All interactive JS runs after DOM is ready — placed after elements to avoid null errors.
    (function(){
      // Footer year
      var yearEl = document.getElementById('year');
      if(yearEl) yearEl.textContent = new Date().getFullYear();

      // Smooth scrolling for internal anchors (packages/services)
      document.querySelectorAll('a.btn').forEach(function(btn){
        btn.addEventListener('click', function(e){
          var href = this.getAttribute('href');
          if(href && href.startsWith('#') && (href === '#packages' || href === '#services')){
            e.preventDefault();
            var target = document.querySelector(href);
            if(target) target.scrollIntoView({behavior:'smooth', block:'start'});
          }
        });
      });

      // Elements
      var quoteBtn = document.getElementById('btn-quote');
      var quoteModal = document.getElementById('quote-modal');
      var closeQuote = document.getElementById('close-quote');

      var contactBtnHeader = document.querySelector('nav a.btn.btn-primary'); // Contact Us in header
      var contactPanel = document.getElementById('contact-panel');
      var closePanel = document.getElementById('close-panel');

      // Open Quote Modal
      if(quoteBtn && quoteModal){
        quoteBtn.addEventListener('click', function(e){
          e.preventDefault();
          quoteModal.style.display = 'flex';
          quoteModal.setAttribute('aria-hidden','false');
        });
      }

      if(closeQuote && quoteModal){
        closeQuote.addEventListener('click', function(){
          quoteModal.style.display = 'none';
          quoteModal.setAttribute('aria-hidden','true');
        });
      }

      // Close modal when clicking outside modal content
      if(quoteModal){
        quoteModal.addEventListener('click', function(e){
          if(e.target === quoteModal){
            quoteModal.style.display = 'none';
            quoteModal.setAttribute('aria-hidden','true');
          }
        });
      }

      // Open Contact Panel (header Contact Us)
      if(contactBtnHeader && contactPanel){
        contactBtnHeader.addEventListener('click', function(e){
          e.preventDefault();
          contactPanel.style.right = '0';
          contactPanel.setAttribute('aria-hidden','false');
        });
      }

      if(closePanel && contactPanel){
        closePanel.addEventListener('click', function(){
          contactPanel.style.right = '-400px';
          contactPanel.setAttribute('aria-hidden','true');
        });
      }

      // Close panel when clicking outside it (for small screens, clicking overlay is not present, so optionally close on Escape)
      document.addEventListener('keydown', function(e){
        if(e.key === 'Escape'){
          if(quoteModal && quoteModal.style.display === 'flex'){
            quoteModal.style.display = 'none'; quoteModal.setAttribute('aria-hidden','true');
          }
          if(contactPanel && contactPanel.style.right === '0px'){
            contactPanel.style.right = '-400px'; contactPanel.setAttribute('aria-hidden','true');
          }
        }
      });

      // Simple form submission handlers (prevent reload and simulate success)
      var quoteForm = document.getElementById('quote-form');
      if(quoteForm){
        quoteForm.addEventListener('submit', function(e){
          e.preventDefault();
          alert('Thank you! Your quote request has been submitted.');
          quoteModal.style.display = 'none'; quoteModal.setAttribute('aria-hidden','true');
          quoteForm.reset();
        });
      }

      var contactForm = document.getElementById('contact-form');
      if(contactForm){
        contactForm.addEventListener('submit', function(e){
          e.preventDefault();
          alert('Thank you! Your message has been sent.');
          contactPanel.style.right = '-400px'; contactPanel.setAttribute('aria-hidden','true');
          contactForm.reset();
        });
      }

    })();
  </script>
