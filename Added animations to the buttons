    </form>
    <button id="close-panel" class="btn" style="margin-top:10px;width:100%">Close</button>
  </div>

  <script>
    (function(){
      // single scope for all interactive behavior to avoid duplicate declarations
      var yearEl = document.getElementById('year');
      if(yearEl) yearEl.textContent = new Date().getFullYear();

      // smooth scroll for anchors
      document.querySelectorAll('a.btn').forEach(function(btn){
        btn.addEventListener('click', function(e){
          var href = this.getAttribute('href');
          if(href && href.startsWith('#') && (href === '#packages' || href === '#services')){
            e.preventDefault();
            var target = document.querySelector(href);
            if(target) target.scrollIntoView({behavior:'smooth', block:'start'});
          }
        });

        // ripple position update
        btn.addEventListener('mouseenter', function(e){
          var rect = this.getBoundingClientRect();
          this.style.setProperty('--x', (e.clientX - rect.left) + 'px');
          this.style.setProperty('--y', (e.clientY - rect.top) + 'px');
        });
      });

      // elements
      var quoteBtn = document.getElementById('btn-quote');
      var quoteModal = document.getElementById('quote-modal');
      var closeQuote = document.getElementById('close-quote');

      var contactBtnHeader = document.getElementById('btn-contact');
      var contactPanel = document.getElementById('contact-panel');
      var closePanel = document.getElementById('close-panel');

      // OPEN quote modal with animation + blur
      function openQuoteModal(){
        if(!quoteModal) return;
        document.body.classList.add('modal-open');
        quoteModal.style.display = 'flex';
        // ensure next frame to trigger transition
        requestAnimationFrame(function(){ quoteModal.classList.add('active'); });
      }

      function closeQuoteModal(){
        if(!quoteModal) return;
        quoteModal.classList.remove('active');
        document.body.classList.remove('modal-open');
        setTimeout(function(){ quoteModal.style.display = 'none'; }, 380);
      }

      if(quoteBtn){
        quoteBtn.addEventListener('click', function(e){ e.preventDefault(); openQuoteModal(); });
      }
      if(closeQuote){ closeQuote.addEventListener('click', closeQuoteModal); }
      if(quoteModal){
        quoteModal.addEventListener('click', function(e){ if(e.target === quoteModal) closeQuoteModal(); });
      }

      // OPEN contact panel
      function openContactPanel(){ if(!contactPanel) return; contactPanel.style.right = '0'; contactPanel.setAttribute('aria-hidden','false'); }
      function closeContactPanel(){ if(!contactPanel) return; contactPanel.style.right = '-400px'; contactPanel.setAttribute('aria-hidden','true'); }

      if(contactBtnHeader){ contactBtnHeader.addEventListener('click', function(e){ e.preventDefault(); openContactPanel(); }); }
      if(closePanel){ closePanel.addEventListener('click', closeContactPanel); }

      // Esc to close
      document.addEventListener('keydown', function(e){ if(e.key === 'Escape'){ closeQuoteModal(); closeContactPanel(); } });

      // simple form handlers
      var quoteForm = document.getElementById('quote-form');
      if(quoteForm){ quoteForm.addEventListener('submit', function(e){ e.preventDefault(); alert('Thank you! Your quote request has been submitted.'); closeQuoteModal(); quoteForm.reset(); }); }

      var contactForm = document.getElementById('contact-form');
      if(contactForm){ contactForm.addEventListener('submit', function(e){ e.preventDefault(); alert('Thank you! Your message has been sent.'); closeContactPanel(); contactForm.reset(); }); }

      // Scroll-to-top button logic with animation + scroll progress ring
      var topBtn = document.getElementById('scrollTopBtn');
      if(topBtn){
        var updateProgress = function(){
          var scrollTop = window.scrollY;
          var docHeight = document.documentElement.scrollHeight - window.innerHeight;
          var scrolled = docHeight > 0 ? (scrollTop / docHeight) * 360 : 0;
          topBtn.style.background = 'conic-gradient(var(--pink) ' + scrolled + 'deg, var(--blue) ' + scrolled + 'deg 360deg)';
        };

        window.addEventListener('scroll', function(){
          updateProgress();
          if(window.scrollY > 300){
            topBtn.classList.add('show');
            topBtn.classList.remove('hide');
          } else {
            topBtn.classList.add('hide');
            setTimeout(function(){ if(topBtn.classList.contains('hide')) topBtn.style.display = 'none'; }, 300);
          }
        });

        topBtn.addEventListener('click', function(){ window.scrollTo({top:0, behavior:'smooth'}); });
      }

    })();
  </script>

  <button id="scrollTopBtn">↑</button>
</body>
